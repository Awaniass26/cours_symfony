{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block nav %}{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <form method="post" class="border p-4 rounded shadow-sm bg-white">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1 class="h4 mb-4 text-center">Please sign in</h1>

            <div class="form-group">
                <label for="inputLogin">Login</label>
                <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" autocomplete="username" required autofocus>
            </div>

            <div class="form-group mt-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-info btn-lg btn-block" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
