{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div class="alert alert-danger">Login ou mot de passe incorrect.</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="_username">Login</label>
            <input type="text" id="_username" name="_username" value="{{ last_username }}" required autofocus class="form-control">
        </div>

        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" id="_password" name="_password" required class="form-control">
        </div>

        <button type="submit" class="btn btn-primary mt-3">Connexion</button>
    </form>
{% endblock %}
