{% extends 'base.html.twig' %}

{% block title %}Liste des Dettes{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card p-3">
                <p><strong>Nom :</strong> {{ client.surname }}</p>
                <p><strong>Téléphone :</strong> {{ client.telephone }}</p>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <div class="card p-3 bg-info text-white">
                <p><strong>Total Montant :</strong> {{ totalAmount }} </p>
            </div>
        </div>
    </div>

    <!-- Formulaire de filtre pour le statut -->
    <div class="d-flex justify-content-end mb-3">
        <form method="get" class="d-flex">
            <input type="hidden" name="clientId" value="{{ client.id }}">
            <select name="status" class="form-control me-2">
                <option value="">Tous</option>
                <option value="solde" {% if status == 'solde' %}selected{% endif %}>Soldé</option>
                <option value="non_solde" {% if status == 'non_solde' %}selected{% endif %}>Non Soldé</option>
            </select>
            <button type="submit" class="btn btn-info">Filtrer</button>
        </form>
    </div>

    <!-- Table de dettes -->
    <table class="table table-bordered table-striped text-center mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Montant</th>
                <th>Montant Versé</th>
                <th>Montant Restant</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for dette in dettes %}
                <tr>
                    <td>{{ dette.getVirtualDate()|date('Y-m-d') }}</td>
                    <td>{{ dette.montant }} </td>
                    <td>{{ dette.montantVerse }} </td>
                    <td>{{ dette.montant - dette.montantVerse }} </td>
                    <td>
                        {% if dette.montant == dette.montantVerse %}
                            <span class="text-success">Soldé</span>
                        {% else %}
                            <span class="text-danger">Non Soldé</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucune dette trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="d-flex justify-content-end mt-4">
        <nav aria-label="Pagination">
            <ul class="pagination">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="btn btn-info" href="{{ path('app_dette', { clientId: client.id, page: currentPage - 1, status: status }) }}">Précédent</a>
                    </li>
                {% endif %}

                {% for page in 1..totalPages %}
                    <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                        <a class="btn btn-info" href="{{ path('app_dette', { clientId: client.id, page: page, status: status }) }}">{{ page }}</a>
                    </li>
                {% endfor %}

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="btn btn-info" href="{{ path('app_dette', { clientId: client.id, page: currentPage + 1, status: status }) }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</div>
{% endblock %}
