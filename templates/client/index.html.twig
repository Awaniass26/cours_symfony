{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Clients</h1>
    
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_client_create') }}" class="btn btn-info">Créer un Client</a>
    </div>

    <div class="d-flex justify-content-end me-10">
        <form method="get" class="d-flex ">
                <input type="text" name="surname" placeholder="Surname" class="form-control " value="{{ app.request.get('surname') }}">
                <input type="text" name="telephone" placeholder="Téléphone" class="form-control " value="{{ app.request.get('telephone') }}">
                <button type="submit" class="btn btn-info">Filtrer</button>
        </form>
    </div>                         X                                                                                             

    <table class="table table-hover table-bordered mt-3">
    <thead class="bg-info text-white">
        <tr>
            <th class="text-center">ID</th>
            <th "text-center">Surname</th>
            <th "text-center">Telephone</th>
            <th "text-center">Adresse</th>
            <th "text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for client in clients %}
            <tr>
                <td class="text-center">{{ client.id }}</td>
                <td class="text-center">{{ client.surname }}</td>
                <td class="text-center">{{ client.telephone }}</td>
                <td class="text-center">{{ client.adresse }}</td>
                <td class="text-center">
                    <a href="{{ path('app_dette', { clientId: client.id }) }}" class="btn btn-dark">Dettes</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Aucun client trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

    <div class="d-flex justify-content-end mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if currentPage > 1 %}
                <li class="page-item">
                    <a class="page-link bg-info text-white" href="{{ path('app_client', { page: currentPage - 1, surname: surname, telephone: telephone }) }}">Précédent</a>
                </li>
            {% endif %}

            {% for page in 1..totalPages %}
                <li class="page-item {% if page == currentPage %}active{% endif %}">
                    <a class="page-link bg-info text-white" href="{{ path('app_client', { page: page, surname: surname, telephone: telephone }) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if currentPage < totalPages %}
                <li class="page-item">
                    <a class="page-link bg-info text-white" href="{{ path('app_client', { page: currentPage + 1, surname: surname, telephone: telephone }) }}">Suivant</a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>


</div>
{% endblock %}
