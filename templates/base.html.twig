<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text><text y='1.3em' x='0.2em' font-size='76' fill='#fff'>sf</text></svg>">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	</head>
	<body>
		{% block nav %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-info">
				<h4 class="text-lg text-white">Gestion Dette</h4>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('create') }}">Client</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="#">User</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" href="{{ path('create_dette') }}">Dette</a>
						</li>
					</ul>
					<div>
						{% if app.user %}
							<div class="text-white">
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}" class="btn btn-dark">Logout</a>
							</div>
						{% endif %}
					</div>
				</div>
			</nav>
		{% endblock %}
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		{% endblock %}

		{% block body %}{% endblock %}


	</body>
</html>
